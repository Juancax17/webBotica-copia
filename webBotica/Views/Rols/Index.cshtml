@model IEnumerable<webBotica2.Models.Rol>

@{
    ViewData["Title"] = "Lista de Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4 fw-bold text-primary">👥 Lista de Roles</h2>

<div class="d-flex justify-content-start mb-3">
    <a class="btn btn-success shadow-sm" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Crear nuevo Rol
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm align-middle text-center table-sm" style="font-size: 14px;">
        <thead class="table-dark text-white">
            <tr>
                <th>Rol</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Rol1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                   
                    <td>@(item.Estado ? "✅" : "❌")</td>
                    
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdRol" class="btn btn-primary btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <form class="d-inline" asp-action="Delete" asp-route-id="@item.IdRol" method="post"
                              onsubmit="return confirm('¿Está seguro de @(item.Estado ? "deshabilitar" : "habilitar") este laboratorio?');">
                            <button type="submit" class="btn btn-sm @(item.Estado ? "btn-danger" : "btn-success")">
                                <i class="bi @(item.Estado ? "bi-x-circle" : "bi-check-circle")"></i>
                                @(item.Estado ? "Deshabilitar" : "Habilitar")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
