@model IEnumerable<webBotica2.Models.Laboratorio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Estilos {
    <style>
        .btn-inhabilitar {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.2s;
            cursor: pointer;
        }

            .btn-inhabilitar:hover {
                background-color: #c0392b;
                transform: scale(1.05);
            }

        .btn-editar {
            background-color: #3498db; /* azul moderno */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.2s;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
        }

            .btn-editar:hover {
                background-color: #2980b9;
                transform: scale(1.05);
            }

        .btn-registrar {
            background-color: #2ecc71; /* verde moderno */
            color: white;
            border: none;
            padding: 8px 18px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-registrar:hover {
                background-color: #27ae60;
                transform: scale(1.05);
            }

        .btn-cancelar {
            background-color: #6c757d; /* gris Bootstrap */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-cancelar:hover {
                background-color: #5a6268;
                transform: scale(1.05);
            }

        .btn-guardar {
            background-color: #28a745; /* verde Bootstrap */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: bold;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-guardar:hover {
                background-color: #218838;
                transform: scale(1.05);
            }
    </style>
}
<h2 class="text-center mb-4">Lista de Laboratorios</h2>

<div class="mb-3 d-flex justify-content-start">
    <a class="btn btn-success" asp-action="Create">Crear Nuevo Laboratorio</a>
</div>

<div class="card shadow">
    <div class="card-body">
        <table class="table table-hover table-bordered align-middle" style="font-size:14px">
            <thead class="table-success text-center">
                <tr>
                    <th>Nombre</th>
                    <th>RUC</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ruc)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                        <td class="text-center">
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.IdLaboratorio">Editar</a>
                            <form class="d-inline" asp-action="Delete" asp-route-id="@item.IdLaboratorio" onsubmit="return confirm('¿Está seguro de deshabilitar este laboratorio?');">
                                <button type="submit" class="btn btn-danger btn-sm">Deshabilitar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
