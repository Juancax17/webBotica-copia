@model webBotica2.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center mb-4">🧑‍💼 Crear Cliente</h2>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Documento" class="form-label">Documento</label>
                        <input asp-for="Documento" class="form-control" maxlength="11"
                               oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                        <span asp-validation-for="Documento" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ApellidoPaterno" class="form-label">Apellido Paterno</label>
                        <input asp-for="ApellidoPaterno" class="form-control" />
                        <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ApellidoMaterno" class="form-label">Apellido Materno</label>
                        <input asp-for="ApellidoMaterno" class="form-control" />
                        <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" maxlength="9"
                               oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label">Correo</label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaNac" class="form-label">Fecha de Nacimiento</label>
                        <input asp-for="FechaNac" class="form-control" type="date" />
                        <span asp-validation-for="FechaNac" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Direccion" class="form-label">Dirección</label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">✅ Guardar</button>
                        <a asp-action="Index" class="btn btn-secondary">↩️ Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


