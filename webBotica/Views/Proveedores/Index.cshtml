@model IEnumerable<webBotica2.Models.Proveedore>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Estilos {
    <style>
        .btn-inhabilitar {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.2s;
            cursor: pointer;
        }

            .btn-inhabilitar:hover {
                background-color: #c0392b;
                transform: scale(1.05);
            }

        .btn-editar {
            background-color: #3498db; /* azul moderno */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.2s;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
        }

            .btn-editar:hover {
                background-color: #2980b9;
                transform: scale(1.05);
            }

        .btn-registrar {
            background-color: #2ecc71; /* verde moderno */
            color: white;
            border: none;
            padding: 8px 18px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-registrar:hover {
                background-color: #27ae60;
                transform: scale(1.05);
            }

        .btn-cancelar {
            background-color: #6c757d; /* gris Bootstrap */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-cancelar:hover {
                background-color: #5a6268;
                transform: scale(1.05);
            }

        .btn-guardar {
            background-color: #28a745; /* verde Bootstrap */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: bold;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-guardar:hover {
                background-color: #218838;
                transform: scale(1.05);
            }
    </style>
}

<h2 class="text-center mb-4">Lista de Proveedores</h2>

<!-- 🔍 Formulario de búsqueda -->
<form asp-action="Index" method="get" class="mb-3 row justify-content-between">
    <div class="col-md-6">
        <input type="text" name="filtro" class="form-control" placeholder="Buscar por RUC o Razón Social..." value="@Context.Request.Query["filtro"]" />
    </div>
    <div class="col-md-3 text-end">
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>

<!-- ✅ Tabla moderna -->
<div class="card shadow-sm">
    <div class="card-body p-3">
        <div class="mb-3 text-start">
            <a class="btn btn-success" asp-action="Create">Crear nuevo Proveedor</a>
        </div>

        <table class="table table-hover table-bordered align-middle text-center" style="font-size: 14px;">
            <thead class="table-success">
                <tr>
                    <th>RUC</th>
                    <th>Razón Social</th>
                    <th>Tipo</th>
                    <th>Teléfono</th>
                    <th>Correo</th>
                    <th>Laboratorio</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Ruc</td>
                        <td>@item.RazonSocial</td>
                        <td>@item.Tipo</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>@item.IdLaboratorioNavigation?.Nombre</td>
                        <td>@if (item.Estado)
                        {
                            <span class="text-success" title="Habilitado">
                                <i class="bi bi-check-circle-fill"></i> Habilitado
                            </span>
                        }
                        else
                        {
                            <span class="text-danger" title="Deshabilitado">
                                <i class="bi bi-x-circle-fill"></i> Deshabilitado
                            </span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm me-1" asp-action="Edit" asp-route-id="@item.IdProveedor">Editar</a>
                            <form class="d-inline" asp-action="Delete" asp-route-id="@item.IdProveedor" onsubmit="return confirm('¿Está seguro de deshabilitar este proveedor?');">
                                <button type="submit" class="btn btn-danger btn-sm">Deshabilitar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
