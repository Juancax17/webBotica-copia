@model webBotica2.Models.Proveedore

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center mb-4">Editar Proveedor</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="IdProveedor" />

                    <div class="mb-3">
                        <label asp-for="Ruc" class="form-label">RUC</label>
                        <input asp-for="Ruc" class="form-control" maxlength="11" oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                        <span asp-validation-for="Ruc" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RazonSocial" class="form-label">Razón Social</label>
                        <input asp-for="RazonSocial" class="form-control" maxlength="50" />
                        <span asp-validation-for="RazonSocial" class="text-danger"></span>
                    </div>

                    

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" maxlength="9" oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label">Correo</label>
                        <input asp-for="Correo" class="form-control" maxlength="50" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                  

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary"> <i class="bi bi-save"></i> Guardar</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

