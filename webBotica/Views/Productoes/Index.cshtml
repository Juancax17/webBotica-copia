@model IEnumerable<webBotica2.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Estilos {
    <style>
        .btn-inhabilitar {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.2s;
            cursor: pointer;
        }

            .btn-inhabilitar:hover {
                background-color: #c0392b;
                transform: scale(1.05);
            }

        .btn-editar {
            background-color: #3498db; /* azul moderno */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.2s;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
        }

            .btn-editar:hover {
                background-color: #2980b9;
                transform: scale(1.05);
            }

        .btn-registrar {
            background-color: #2ecc71; /* verde moderno */
            color: white;
            border: none;
            padding: 8px 18px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-registrar:hover {
                background-color: #27ae60;
                transform: scale(1.05);
            }

        .btn-cancelar {
            background-color: #6c757d; /* gris Bootstrap */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-cancelar:hover {
                background-color: #5a6268;
                transform: scale(1.05);
            }

        .btn-guardar {
            background-color: #28a745; /* verde Bootstrap */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: bold;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-guardar:hover {
                background-color: #218838;
                transform: scale(1.05);
            }
    </style>
}
<h2 class="text-center mb-4">Lista de Productos</h2>

<div class="d-flex justify-content-start mb-3">
    <a class="btn btn-success btn-sm" asp-action="Create">
        <i class="bi bi-plus-circle-fill"></i> Registrar Producto
    </a>
</div>

<table class="table table-bordered table-hover table-striped align-middle text-center shadow-sm" style="font-size: 13px;">
    <thead class="table-success">
        <tr>
            <th>SKU</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio Compra</th>
            <th>Precio Venta</th>
            <th>F. Vencimiento</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Marca</th>
            <th>Proveedor</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Sku</td>
                <td>@item.Nombre</td>
                <td>@item.Presentacion</td>
                <td>@item.PrecioCompra.ToString("C")</td>
                <td>@item.PrecioVenta.ToString("C")</td>
                <td>@item.FechaVen.ToString("dd/MM/yyyy")</td>
                <td>@item.Stock</td>
                <td>@item.IdCategoriaNavigation.Nombre</td>
                <td>@item.IdMarcaNavigation.Nombre</td>
                <td>@item.IdProveedorNavigation.RazonSocial</td>
                <td>
                    @if (item.Estado)
                    {
                        <span class="text-success" title="Habilitado">
                            <i class="bi bi-check-circle-fill"></i> Habilitado
                        </span>
                    }
                    else
                    {
                        <span class="text-danger" title="Deshabilitado">
                            <i class="bi bi-x-circle-fill"></i> Deshabilitado
                        </span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@item.IdProd">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <form class="d-inline" asp-action="Delete" asp-route-id="@item.IdProd" onsubmit="return confirm('¿Está seguro de deshabilitar?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-x-circle"></i> Deshabilitar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
